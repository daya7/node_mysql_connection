

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>NEWS</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
</head>
<body>
    <nav class="navbar navbar-dark bg-dark"> 
        <a href="#" class="navbar-brand mx-auto">NEWS</a>
    </nav>
    <div class="row">
        <div class="col-md-6 mt-4 text-center">
          <table class="table table-striped table-bordered">
            <tr>
              <th>ID</th>
              <th>Title</th>
              <th>News</th>
            </tr>
            <% for (var i = 0; i < news.length; i ++) { %>
              <tr>
                <td><%= news[i].id_news %></td>
                <td><%= news[i].title %></td>
                <td><%= news[i].news %></td>
              </tr>
            <% } %>
          </table>
        </div>
  
        <div class="col-md-6 mt-4 card">
          <form class="card-body" action="/news" method="post">
            <h3 class="card-title">Add News</h3>
            <div class="form-group">
              <input name="title" type="text" class="form-control" placeholder="News Titlte">
            </div>
            <div class="form-group">
              <input name="news" type="text" class="form-control" placeholder="News Content">
            </div>
            <input type="submit" class="btn btn-primary">
          </form>
        </div>
      </div>
      <script>
        document.getElementById('title').focus();
      </script>
    </body>
  </html>
  